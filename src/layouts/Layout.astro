---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Descubre una amplia variedad de presentes y detalles para regalar a quién tanto aprecias en Aleart. Visítanos en San Miguel, El Salvador, y encuentra opciones únicas que inspiran."
    />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="./aleart.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.onload=null;this.removeAttribute('media');"
    />
    <!-- Etiqueta meta para definir el idioma de la página -->
    <meta name="language" content="es" />

    <!-- Etiqueta meta para especificar la región del contenido -->
    <meta name="geo.region" content="ES" />

    <!-- Etiqueta meta para especificar el autor de la página -->
    <meta name="author" content="Ale Art" />

    <!-- Etiqueta meta para especificar la fecha de última modificación -->
    <meta name="last-modified" content="2024-05-06" />

    <!-- Etiqueta meta para especificar los términos de búsqueda relacionados con la página -->
    <meta
      name="keywords"
      content="arte, manualidades, decoración, regalos, flores, cuadros, cajas de regalo, snacks, arreglos florales, flores artificiales, aleartsv, ale art, aleart, ale art sv, ale art el salvador, ale art san miguel, ale art tienda, ale art tienda de arte, ale art tienda de manualidades, ale art tienda de decoración, ale art tienda de regalos, ale art tienda de flores, ale art tienda de cuadros, ale art tienda de cajas de regalo, ale art tienda de snacks, ale art tienda de arreglos florales, ale art tienda de flores artificiales, ale art tienda de aleartsv, ale art tienda de ale art, ale art tienda de aleart, ale art tienda de ale art sv, ale art tienda de ale art el salvador, ale art tienda de ale art san miguel"
    />

    <!-- Etiqueta meta para robots -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="copyright" content="Ale Art" />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --neutral-5: #f3f3f3;
    --primary: #283a4f;
    --wt-color-dark: #27282c;
  }

  html,
  body {
    font-family: "League Spartan", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    background-color: var(--neutral-5);
    color: var(--wt-color-dark, #000);
  }

  ._btn-primary {
    background-color: var(--primary);
    color: #fff;
  }
</style>
